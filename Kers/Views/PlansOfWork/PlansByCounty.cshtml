@{
    Layout = "~/Views/Shared/_LayoutReports.cshtml";
    ViewData["Title"] = "Plans of Work By Planning Unit";
    ViewData["Subtitle"] = "Kentucky Extension Reporting System";
    var fy = ViewData["fy"] as Kers.Models.Entities.KERScore.FiscalYear;
}
@model List<Kers.Models.ViewModels.PlanOfWorkViewModel>


<div class="text-right">
        <a asp-controller="PlansOfWork"  asp-action="Countylist" asp-route-fy=@fy.Name class="btn btn-default btn-xs">Back to Counties</a><br>
</div>
@if(Model.Count() == 0){
    <p>No Plans of Work for this Fiscal Year.</p>
}else{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <th></th>
                <th>FY</th>
                <th>Planning Unit</th>
                <th>MAP Title</th>
                <th>Program Plan</th>
            </thead>
            <tbody>
            @foreach( var plan in Model){
                <tr>
                    <td><a asp-controller="PlansOfWork"  asp-action="PlanFullCounty" asp-route-id=@plan.Id class="btn btn-info btn-xs">Select</a></td>
                    <td>@plan.FiscalYear.Name</td>
                    <td>@plan.PlanningUnit.Name</td>
                    <td>@(fy.Epoch < 1 ? plan.LastRevision.Map.Title : "")</td>
                    <td>@plan.LastRevision.Title</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    
}
