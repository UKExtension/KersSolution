@model List<Kers.Models.ViewModels.StoryViewModel>;
@{
    var FiscalYear = ViewData["FiscalYear"] as Kers.Models.Entities.KERScore.FiscalYear;
}
<div class="panel">
    <div class="x_title">
        <h2>Stories <small>Behind the Numbers</small></h2>
        
        <div class="clearfix"></div>
    </div>
    <div class="panel-body">
        <div class="dashboard-widget-content">
            <ul class="list-unstyled timeline widget">
                @foreach( var theStory in Model){
                        <li>
                        <div class="block">
                        <div class="block_content">
                            <h2 class="title">
                                            <a asp-route="ReportsFullStory" asp-route-fy="@FiscalYear.Name" asp-route-id="@theStory.StoryId">@theStory.Title</a>
                                        </h2>
                            <div class="byline" style="padding-bottom: .35em;">
                        <span>@Html.TimeAgo(@theStory.Updated)</span> by <a>@theStory.KersUser.PersonalProfile.FirstName @theStory.KersUser.PersonalProfile.LastName</a>
                    </div>
                            <p class="excerpt">
                            
                                @{
                                var stryn = System.Text.RegularExpressions.Regex.Replace(@theStory.Story, "<[^>]*>", string.Empty);
                            }
                    
                            @stryn.Substring(0, Math.Min(stryn.Length, 200))... <a asp-route="ReportsFullStory" asp-route-fy="@FiscalYear.Name" asp-route-id="@theStory.StoryId">Read&nbsp;More</a>
                            </p>
                        </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
        <a asp-controller="Story" asp-action="Index" asp-route-fy="@FiscalYear.Name" class="btn btn-sm btn-primary">More Stories</a>
    </div>
</div>