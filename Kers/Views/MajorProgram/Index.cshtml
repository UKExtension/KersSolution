@model List<Kers.Models.Entities.KERScore.StrategicInitiative>
@{
    Layout = "~/Views/Shared/_LayoutReports.cshtml";
    ViewData["Title"] = "Major Programs";
    ViewData["Subtitle"] = "Kentucky Extension Reporting System";
    var divided = false;
    var index = 0;
}

<div class="row">
    <div class="col-md-6 col-sm-12">
        @foreach( var initiative in Model )
        {

            <div class="x_panel tile">
                <div class="x_title">
                  <h2>@initiative.Name</h2>
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                  <table class="table table-striped">
                    <tbody>
                        @foreach( var program in initiative.MajorPrograms)
                        {
                        <tr>
                            <td><a asp-controller="MajorProgram" 
                                    asp-action="Program" 
                                    asp-route-id="@program.Id">@program.Name</a></td>
                        </tr>
                        }
                    </tbody>
                  </table>
                </div>
              </div>
              @if( index > (Model.Count() / 2) && !divided)
              {
                  divided = true;
                  @Html.Raw("</div><div class='col-md-6 col-sm-12'>")
              }
              index++;
        }
    </div>




</div>