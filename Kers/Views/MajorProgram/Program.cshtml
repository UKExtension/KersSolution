@model Kers.Models.Entities.KERScore.MajorProgram

@{
    Layout = "~/Views/Shared/_LayoutReports.cshtml";
    ViewData["Title"] = Model.Name;
    ViewData["Subtitle"] = "Major Program";
    var indicators = ViewData["Indicators"] as List<Kers.Models.ViewModels.ProgramIndicatorSumViewModel>;
}

@await Html.PartialAsync("TopStatsPartial")


<div class="row">
    <div class="col-md-8 col-sm-8 col-xs-12">
        
        <div class="row">
            <div class="col-sm-12">
                


                <div class="x_panel tile">
                <div class="x_title">
                  <h2>Program Indicators</h2>
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                  <table class="table">
                    <tbody>
                        @foreach( var indicator in indicators)
                        {
                        <tr>
                            <td>@Html.Raw(@indicator.ProgramIndicator.Question)</td>
                            <td>@indicator.Sum</td>
                        </tr>
                        }
                    </tbody>
                  </table>
                </div>
              </div>



            </div>
        </div>


        @await Component.InvokeAsync("MainStory", new {MajorProgramId = Model.Id})
    </div>
    <div class="col-md-4 col-sm-4 col-xs-12">
        @await Component.InvokeAsync("LatestStories", new {MajorProgramId = Model.Id})
    </div>
</div>